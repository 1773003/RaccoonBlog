@{
    ViewBag.Message = TempData["Message"] as string;
}
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/css/ResetCss.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/css/main.css")" rel="stylesheet" type="text/css">
    @RenderSection("Style", false)
    @if (string.IsNullOrEmpty(ViewBag.CustomCss) == false) { 
		<text>
			<link href="@Url.Content(string.Format("~/Content/css/custom/{0}/{0}.css", @ViewBag.CustomCss))" rel="stylesheet" type="text/css">
		</text>
	}

	<link id="Rsd" rel="EditURI" type="application/rsd+xml" title="RSD" href="@Url.Action("Rsd", "Syndication")">
    <link id="AtomLink" title="RSS" type="application/rss+xml" rel="alternate" href="@Url.Action("Rss", "Syndication")">
  
</head>
<body>
    <div class="containter page">
        <header id="headermain">
			<div id="logoarea">
				<div id="logoimage"><a href="@Url.RouteUrl("Default")"><img alt="Ayende's Logo" class="topLogo" src="http://www.ayende.com/Images/logo.jpg"></a></div>
				<h1><a href="@Url.RouteUrl("Default")">@ViewBag.Title</a></h1>
				<h2>@ViewBag.SubTitle</h2>
			</div>
		</header>
        <div id="mainBody">
                @{Html.RenderAction("List", "Section");}
            
            <div id="content">
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                { 
                    <div class="message">@ViewBag.Message</div>
                }
                @RenderBody()
            </div>
        </div>
    </div>
    @if (IsSectionDefined("Script")) {
        <script src="@Url.Content("~/Content/js/jquery-1.6.min.js")" type="text/javascript"></script>
        <script type="text/javascript">
            function setMessage(message, cssClass) {
                var m = $('#message').html(message);
                if (cssClass) m.removeClass().addClass(cssClass);
                m.css('visibility', 'visible');
            }
        </script>
        @RenderSection("Script")
    }
</body>
</html>
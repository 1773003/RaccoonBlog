@model IList<CommentRssFeedViewModel>
@foreach (var comment in Model)
{
	<item>
		<title>@XmlHelper.Content(comment.Title)</title>
		<description>@XmlHelper.Content(comment.Body)</description>
		<link>@Url.AbsoluteAction("Details", "PostDetails", new { Id = comment.PostId, Slug =comment.PostSlug})#comment@(comment.CommentId)</link>
		<guid>@Url.AbsoluteAction("Details", "PostDetails", new { Id = comment.PostId, Slug = comment.PostSlug })#comment@(comment.CommentId)</guid>
		<pubDate>@comment.CreatedAt</pubDate>
	</item>
}
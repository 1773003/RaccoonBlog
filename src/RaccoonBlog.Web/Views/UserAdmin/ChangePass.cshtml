@model ChangePassViewModel
@{
	ViewBag.Title = "Change Password: " + Model.FullName;
}
<article id="user-input">
	<h1>Edit @Model.FullName's Password</h1>
	@Html.ValidationSummary(true)

	<form action="@Url.Action("ChangePass")" method="post">
		@Html.EditorFor(x => x.Input.OldPass)
		@Html.EditorFor(x => x.Input.NewPass)
		@Html.EditorFor(x => x.Input.NewPassConfirmation)

		@Html.EditorFor(x => x.Input.Id)
		<input type="submit" value="Change Password">
	</form>
</article>
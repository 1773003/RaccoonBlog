@model LoginInput
@{
	ViewBag.Title = "Login";
}
<article id="login">
	@Html.ValidationSummary("form-error")

	<form action="@Url.Action("Login")" method="post">
		@Html.EditorFor(x => x.Email)
		@Html.EditorFor(x => x.Password)
				  
		@Html.EditorFor(x => x.ReturnUrl)
		<input type="submit" value="Login">
	</form>
</article>
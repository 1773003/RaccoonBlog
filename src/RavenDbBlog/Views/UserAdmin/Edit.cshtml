@model UserInput
@{
	ViewBag.Title = Model.IsNewUser() ? "Create a New User" : "Edit User " + Model.FullName;
	ViewBag.SubmitButtonText = Model.IsNewUser() ? "Create User" : "Update User";
}
<article id="user-input">
	@Html.ValidationSummary("form-error")

	<form action="@Url.Action("Add")" method="post">
		@Html.EditorFor(x => x.FullName)
		@Html.EditorFor(x => x.Email)
				  
		<input type="submit" value="@ViewBag.SubmitButtonText">
	</form>
</article>
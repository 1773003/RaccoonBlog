@model PostsViewModel
@{
    
}

@foreach (var post in Model.Posts)
{
    <article>
        <header>
            <h1>@post.Title</h1>
        </header>
        
        <div class="post_body">
            @post.Body
        </div>

        <footer>
            Posted at <time pubdate>@post.CreatedAt.ToString("r")</time> | Feedback (@post.CommentsCount)
        </footer>
    </article>
}
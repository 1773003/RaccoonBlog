@model PostViewModel
@{
}

<article class="post">
    <header>
        <h1><a href="@Url.Action("Post", new {Slug = Model.Post.Slug})">@Model.Post.Title</a></h1>
    </header>
    
    <nav>
        <ul>
            @if (Model.PreviousPost != null) { 
                <li><a href="@Url.Action("Post", new { Model.PreviousPost.Id, Model.PreviousPost.Slug })">@Model.PreviousPost.Title</a></li>
            }
        
            @if (Model.NextPost != null)
            { 
                <li><a href="@Url.Action("Post", new { Model.NextPost.Id, Model.NextPost.Slug })">@Model.NextPost.Title</a></li>
            }
        </ul>
    </nav>

    <div class="post_body">
        @Model.Post.Body
    </div>

    <footer>
        Posted at <time pubdate>@Model.Post.CreatedAt.ToString("r")</time>
    </footer>

    <section>
        @foreach (var comment in Model.Comments)
        {
            <article>
                <address>
                    <a title="Comment by @comment.Author" href="@comment.Url">@comment.Author</a>
                </address>
                <div>@comment.Body</div>
                <div>Posted date: @comment.CreatedAt</div>
            </article>
        }
    </section>
</article>
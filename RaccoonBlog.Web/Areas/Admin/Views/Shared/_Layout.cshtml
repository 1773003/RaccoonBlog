<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	@{
		ViewBag.Message = TempData["Message"] as string;
	}
	<title>RaccoonBlog :: @ViewBag.Title</title>
	<link rel="stylesheet" type="text/css" href="@Url.ActionLinkWithArray("Merge", "Css", new { files = new[] { "ResetCss.css", "custom/" + ViewBag.BlogConfig.CustomCss + ".settings.less.css", "base.less.css", "custom/" + ViewBag.BlogConfig.CustomCss + ".less.css" } })">
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/Admin/Content/css/AdminStyle.css")">
	
	@RenderSection("Style", false)
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
	<link  rel="stylesheet" type="text/css" href="@Url.Content("~/Content/themes/base/jquery-ui.css")" />
	<script src="@Url.Content("~/Content/js/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Content/js/raccoon-blog.js")" type="text/javascript"></script>
	<link rel="stylesheet" type="text/css" href="@Url.Content("~/Areas/Admin/Content/css/jquery-ui-timepicker-addon.css")">
	<script src="@Url.Content("~/Areas/Admin/Content/js/jquery-ui-timepicker-addon.js")" type="text/javascript"></script>
	@RenderSection("Script", false)
	<script type="text/javascript">
		$(function () {
			$('input[type=datetime]').datetimepicker({
				gotoCurrent: true,
				showOn: 'button',
				buttonImage: '@Url.Content("~/Areas/Admin/Content/images/forms/icon_calendar.jpg")',
				buttonImageOnly: true,
				buttonText: 'Calendar',
				showSecond: true,
				timeFormat: 'hh:mm:ss',
				stepHour: 2,
				stepMinute: 10,
				stepSecond: 10
			});

			$('#toggle-all').click(function () {
				$('#toggle-all').toggleClass('toggle-checked');
				$('#mainform input[type=checkbox]').checkBox('toggle');
				return false;
			});
		});
	</script>
	
	@if (ViewExtensions.IsDebug())
	{
		<script type="text/javascript" src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")"></script>
	}
	else
	{
		<script type="text/javascript" src="@Url.Content("~/Scripts/modernizr.custom.23209.js")"></script>
	
	}
	<script type="text/javascript">
		
	</script>
</head>
	<body class="admin-area">
		<header>
			<div id="logo">
				<a href="@Url.Action("Index", "Posts")"><img src="@Url.Content("~/Content/css/images/logo-admin.png")" width="51" height="40" alt="Logo"></a>
			</div>
			<nav>
				@{Html.RenderPartial("RenderMenu", RaccoonBlog.Web.Areas.Admin.Helpers.MenuUtil.GetTopMenu(Url));}
			</nav>
			<div id="nav-right">
				<a href="@Url.Action("Logout", "Login")">Logout</a>
			</div>
		</header>
		<div class="clr"></div>

		<div id="content-outer">
			<div id="content-admin">
				@RenderBody()
			</div>
		</div>
		<div class="clr"></div>
		
		<footer>
			<div id="footer-left">
				Admin Skin &copy; Copyright Internet Dreams Ltd. <a href="">www.netdreams.co.uk</a>.
				All rights reserved.</div>
		</footer>
	</body>
</html>
@model PostInput
@{
    ViewBag.Title = @Model.Title;
}

<article class="post">
@using (Html.BeginForm())
{

	@Html.EditorFor(x => x.Title);
    @Html.EditorFor(x => x.ContentType);
	@Html.EditorFor(x => x.Body);
	@Html.EditorFor(x => x.CreatedAt);
	@Html.EditorFor(x => x.PublishAt);
	@Html.EditorFor(x => x.Tags);
	@Html.EditorFor(x => x.AllowComments);

    <text><input type="submit" value="Update Post"></text>
}
</article>
@using RaccoonBlog.Web.Models
@model PostInput
@{
	ViewBag.Title = @Model.Title;
}
<div id="page-heading">
	<h1>
		Create a new post</h1>
</div>
@if (ViewData.ModelState.IsValid == false)
{ 
	<div class="form-error">
		@Html.ValidationSummary(true)
	</div>
}
<article id="user-input">
	<form action="@Url.Action("Add")" method="post">
	<table style="width: 130%;" id="content-table">
		<tr>
			<th rowspan="3" class="sized">
				<img src="@Html.AdminImage("shared/side_shadowleft.jpg")" width="20"
	height="300" alt="" />
			</th>
			<th class="topleft">
			</th>
			<td id="tbl-border-top">
				&nbsp;
			</td>
			<th class="topleft">
			</th>
			<th rowspan="3" class="sized">
				<img src="@Html.AdminImage("shared/side_shadowright.jpg")"
	width="20" height="300" alt="" />
			</th>
		</tr>
		<tr>
			<td id="tbl-border-left">
			</td>
			<td>
				<div>
					<table id="content-table-inner">
						<tr>
							<td>
								<table id="id-form">
									<p>@Html.EditorFor(x => x.Title)</p>
									<p>@Html.EditorFor(x => x.ContentType)</p>
									<p>@Html.EditorFor(x => x.Body)</p>
									<p>@Html.EditorFor(x => x.CreatedAt)</p>
									<p>@Html.EditorFor(x => x.PublishAt)</p>
									<p>@Html.EditorFor(x => x.Tags)</p>
									<p>@Html.EditorFor(x => x.AllowComments)</p>
									<div class="markdown-preview-container">
										<div class="section markdown-preview">
										</div>
									</div>
									@Html.HiddenFor(x => x.Id)
									<tr>
										<th>
										</th>
										<td valign="top">
											<input type="submit" value="Update Post">
										</td>
										<td>
										</td>
									</tr>
								</table>
								
							</td>
						</tr>
					</table>
				</div>
				</td>
				</tr>
	</table>
	</form>
</article>
<div class="clear">
	&nbsp;</div>
@section Script {
	<script type="text/javascript" src="@Url.Content("~/Content/js/showdown.js")"></script>
	<script type="text/javascript">
		$(function () {
			var $textarea = $('textarea[name$="Body"]').keydown(function () {
				$('.markdown-preview-container').show('medium');
			});
			var $preview = $('.markdown-preview');
			var converter = new Showdown.converter();
			$textarea.keyup(function () {
				$preview.html(converter.makeHtml($textarea.val()));
			}).trigger('keyup');
		});
	</script>
}

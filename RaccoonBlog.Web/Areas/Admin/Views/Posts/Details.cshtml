@model AdminPostDetailsViewModel
@{
	ViewBag.Title = @Model.Post.Title;
}

<article class="post">
	<header>
		<h1><a href="@Url.Action("Details", new { Model.Post.Id, Model.Post.Slug })">@Model.Post.Title</a></h1>
		<div id="post-admin">
			<ul style="list-style-type: none">
				<li><a href="@Url.Action("Details", "PostDetails", new { area = "" })">View</a></li>
				<li><a href="@Url.Action("Details", "PostDetails", new { key = @Model.Post.Key, area = "" })">Private View</a></li>
				<li><a href="@Url.Action("Edit", "Posts", new { id = @Model.Post.Id})">Edit</a></li>
				<li>
					<div style="right: 0px; float: right; width: 100%">
						<form action="@Url.Action("Delete", new { @Model.Post.Id })" method="post">
							<input style="float: right; right: 2px; width: 100px;" type="submit" value="Delete">
						</form></div>
				</li>
			</ul>
		</div>
	</header>
	
	<nav id="headerPrevNext">
		<ul>
		   @if (Model.PreviousPost != null)
			{ 
			   <li><a href="@Url.Action("Details", new { Model.PreviousPost.Id, Model.PreviousPost.Slug })">previous: @Model.PreviousPost.Title</a></li>
			}
		&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			@if (Model.NextPost != null)
			{ 
			  <li> <a href="@Url.Action("Details", new { Model.NextPost.Id, Model.NextPost.Slug })">next: @Model.NextPost.Title</a></li>
			}
		</ul>
	</nav>

	<div class="post_body raw_html">
		@Model.Post.Body
	</div>
	<br/>
	<footer style="border-top: 2px solid silver; border-bottom: 2px solid silver; ">
		Published at <time pubdate>@Model.Post.PublishedAt.ToString("r")</time>

		@if (Model.Post.PublishedAt != Model.Post.CreatedAt)
		{ 
			<span>
			| Originally posted at <time>@Model.Post.CreatedAt.ToString("r")</time>
			</span>
		}
	</footer>

	
	<div class="tags">
		<ul>
			@foreach (var name in Model.Post.Tags) {
				<a href="@Url.Action("Tag", "Posts", new { name })">@name</a>}
		</ul>
	</div>
	

	<section class="comments">
		<header>
			<a name="comments"></a>
			<h1>Comments (@Model.Comments.Count)</h1>
		</header>
		@if (Model.Comments.Count == 0) { 
			<p>No comments posted yet.</p>
		}
		<form action="@Url.Action("CommentsAdmin", new { id = Model.Post.Id })" method="post">
			@foreach (var comment in Model.Comments) {
				<article style="border-bottom: 2px solid silver; border-top: 2px solid silver;" comment-id="comment@(comment.Id)" class="comment @(comment.IsImportant ? " important" : null)@(comment.IsSpam ? " spam" : null)">
				   <br/>
					<div class="avatar">
						<img style="float: left; padding : 6px 6px 6px 6px" src="http://www.gravatar.com/avatar.php?gravatar_id=@(comment.EmailHash)&amp;size=50&amp;default=identicon" alt="Gravatar">
				   
						  </div>
					   <div class="comment_title">
					 <br/>
						@comment.CreatedAt by
						<address>
						   &nbsp;&nbsp;&nbsp; <a title="@(string.IsNullOrEmpty(comment.Url) ? "Comment by " + comment.Author : comment.Url)" href="@comment.Url">@comment.Author</a>
						  
						  <form name="comment" > <a  name="comment@(comment.Id)"></a><br/>
						  <div style="right: 0px; float: right; width: 100%">
							 <input style="float: right; left: 83%" type="checkbox" name="commentIds" value="@comment.Id" id="comment@(comment.Id)" /></div>
							 <label style="color: black" for="comment@(comment.Id)" value="@comment.Id">@comment.Body</label>
						 </form>
						</address>
					</div>
					 <br/>
					@* <p >@comment.Body</p> *@
				</article>
			}
			<div id="comments-admin">
				<input type="submit" name="command" value="Delete" class="confirm">
				<input type="submit" name="command" value="Mark Spam" class="confirm">
				<input type="submit" name="command" value="Mark Ham" class="confirm">
			</div>
		</form>
	</section>
</article>
@if (Model.AreCommentsClosed)
{ 
	<div>Comments have been closed on this topic.</div>
}
@section Script {
	<script type="text/javascript">
		$(function () {
			$('.comment').click(function () {
				var c = $('#' + $(this).attr("comment-id"));
				c.attr('checked', !c.attr('checked'));
			});

			$('.confirm').click(function () {
				return confirm('Are you sure you want to ' + $(this).val().toLowerCase() + '?');
			});
		});
  </script>
}
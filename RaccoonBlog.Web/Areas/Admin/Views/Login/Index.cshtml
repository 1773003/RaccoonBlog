@using HibernatingRhinos.Loci.Common.Models
@model LogOnModel
@{
	Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<title>RaccoonBlog :: Login</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
</head>
<body id="login-bg">
	<div id="login-holder">
		<div id="logo-login">
			<a href="@Url.RouteUrl("homepage")"><img src="@Url.Content("~/Areas/Admin/Content/images/logo.png")" width="51" height="50" alt="Logo"></a>
		</div>
		<div class="clear">
		</div>
		<div id="loginbox">
			@if (ViewData.ModelState.IsValid == false)
   { 
				<div class="form-error">
					@Html.ValidationSummary(true)
				</div>
   }
			<article id="user-input" style="width: 350px">
				<form action="@Url.Action("Index")" method="post">
				<div style="width: 350px; height: 200px">
					<div style="float: left; padding-left: 17px; font-size: 16px" class="login-form">
						<div id="id-form" style="top: 0;">
							@Html.EditorFor(x => x.Login)
							@Html.EditorFor(x => x.Password)
							@Html.EditorFor(x => x.RememberMe)
							@Html.HiddenFor(x => x.ReturnUrl)
							<div style="float: right; width: 600px">
								<input style="width: 180px" type="submit" value="Login"></div>
						</div>
					</div>
				</div>
				</form>
				<div id="forgotbox">
					<div id="forgotbox-text">
						Please send us your email and we'll reset your password.</div>
					<div id="content-table-inner" class="inputform">
						<div id="id-form" style="top: 0;">
							@Html.EditorFor(x => x.Login)
							@Html.EditorFor(x => x.Password)
							<div>
								<input type="submit" value="Login"></div>
						</div>
					</div>
				</div>
			</article>
			<div class="clear">
				&nbsp;</div>
			@section Script {
				<script type="text/javascript" src="@Url.Content("~/Content/js/showdown.js")"> </script>
				<script type="text/javascript">
					$(function () {
						var $textarea = $('textarea[name$="Body"]').keydown(function () {
							$('.markdown-preview-container').show('medium');
						});
						var $preview = $('.markdown-preview');
						var converter = new Showdown.converter();
						$textarea.keyup(function () {
							$preview.html(converter.makeHtml($textarea.val()));
						}).trigger('keyup');
					});
				</script>
			}
		</div>
	</div>
</body>
</html>